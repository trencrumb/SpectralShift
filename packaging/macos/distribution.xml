<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>${PRODUCT_NAME} ${VERSION}</title>
    <allowed-os-versions>
        <os-version min="10.13" />
    </allowed-os-versions>
    <organization>${BUNDLE_ID}</organization>
    <domains enable_localSystem="true"/>
    <options customize="always" require-scripts="false" hostArchitectures="arm64,x86_64"/>
    <license file="../../LICENSE.txt" />
    <conclusion file="conclusion.html" mime-type="text/html" />
    <pkg-ref id="${BUNDLE_ID}.au.pkg" version="${VERSION}" onConclusion="none">${PRODUCT_NAME}.au.pkg</pkg-ref>
    <pkg-ref id="${BUNDLE_ID}.vst3.pkg" version="${VERSION}" onConclusion="none">${PRODUCT_NAME}.vst3.pkg</pkg-ref>
    <pkg-ref id="${BUNDLE_ID}.app.pkg" version="${VERSION}" onConclusion="none">${PRODUCT_NAME}.app.pkg</pkg-ref>
    <pkg-ref id="${BUNDLE_ID}.clap.pkg" version="${VERSION}" onConclusion="none">${PRODUCT_NAME}.clap.pkg</pkg-ref>
    <pkg-ref id="${BUNDLE_ID}.lv2.pkg" version="${VERSION}" onConclusion="none">${PRODUCT_NAME}.lv2.pkg</pkg-ref>

    <choices-outline>
        <line choice="${BUNDLE_ID}.au.pkg"/>
        <line choice="${BUNDLE_ID}.vst3.pkg"/>
        <line choice="${BUNDLE_ID}.app.pkg"/>
        <line choice="${BUNDLE_ID}.clap.pkg"/>
        <line choice="${BUNDLE_ID}.lv2.pkg"/>
    </choices-outline>

    <choice id="${BUNDLE_ID}.au.pkg" visible="true" title="Audio Unit (AU)" description="Install the AU plugin">
        <pkg-ref id="${BUNDLE_ID}.au.pkg"/>
    </choice>
    <choice id="${BUNDLE_ID}.vst3.pkg" visible="true" title="VST3" description="Install the VST3 plugin">
        <pkg-ref id="${BUNDLE_ID}.vst3.pkg"/>
    </choice>
    <choice id="${BUNDLE_ID}.app.pkg" visible="true" title="Standalone App" description="Install the standalone application">
        <pkg-ref id="${BUNDLE_ID}.app.pkg"/>
    </choice>
    <choice id="${BUNDLE_ID}.clap.pkg" visible="true" title="CLAP" description="Install the CLAP plugin">
        <pkg-ref id="${BUNDLE_ID}.clap.pkg"/>
    </choice>
    <choice id="${BUNDLE_ID}.lv2.pkg" visible="true" title="LV2" description="Install the LV2 plugin">
        <pkg-ref id="${BUNDLE_ID}.lv2.pkg"/>
    </choice>
</installer-gui-script>